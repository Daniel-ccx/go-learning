without beego,
how to output the contents on tpl?

Let's try this!

package main

import (
	"fmt"
	"html/template"
	"log"
	"net/http"
	"strings"
)

const (
	TPL_DIR = "./views/"
)

type Params struct {
	Ab string
}

func saySth(w http.ResponseWriter, r *http.Request) {
  t := template.Must(template.ParseFiles(TPL_DIR + "list.tpl"))
  a := r.FormValue("a")
  log.Printf(a)
	o := Params{Ab: a}
	//这里p必须是object
	t.Execute(w, o)
  
}

//list.tpl

